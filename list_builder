import random
@ creates lists that fit the description of question 1 in the theoretical part.
@ pre: i is a positive integer (the function can handle cases where i > 5 although the question restricts i to be lesser than 5).
@ list types are reverse, shuffle and almost. for any other type the output is None.
def list_builder(i, lst_type):
    n = pow(2,i)*1500
    return_lst = []
    while n > 0:
        return_lst.append(n)
        n -= 1
    if lst_type == "reverse":
        return return_lst
    elif lst_type == "shuffle":
        random.shuffle(return_lst)
        return return_lst
    elif lst_type == "almost":
        return_lst.reverse()
        split_lst = [return_lst[i: i + 300] for i in range(0, len(return_lst), 300)]
        return_lst = []
        for lst in split_lst:
            lst.reverse()
            return_lst = return_lst + lst
        return return_lst
    else:
        return None
